<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:gravity="center_horizontal"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleMarginStart="100dp"
        app:titleTextColor="@color/white"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Profile"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp" />
    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="231dp"
        android:layout_height="207dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="156dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/UserN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="User Name"
            android:textColor="#FF6B00"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:layout_width="311dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#FF6B00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/person"/>
        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text=" Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/firstN"
            android:layout_width="222dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:text="   "
            android:textColor="#A8A7A6"
            android:textSize="18dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="-9dp"
        android:layout_marginRight="15dp"
        android:background="#A8A7A6"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="367dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/url" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=" LinkedIn"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/website"
            android:layout_width="222dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:text="empty"
            android:textColor="#A8A7A6"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="0dp">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/bio" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=" Bio"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bio"
            android:layout_width="222dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:text="empty"
            android:textColor="#A8A7A6"
            android:textSize="18dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="-9dp"
        android:layout_marginRight="15dp"
        android:background="#A8A7A6"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="-3dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="-3dp">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/email1" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=" Email"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Mail"
            android:layout_width="222dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:text="  "
            android:textColor="#A8A7A6"
            android:textSize="18dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="15dp"
        android:background="#A8A7A6" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="400dp"
        android:layout_marginRight="15dp"
        android:background="#A8A7A6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="550dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/EditBtn"
            android:layout_width="178dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/edit"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="Edit Profile"
            android:textColor="#FF6B00"
            android:textSize="18dp" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        android:background="#000000"
        app:itemIconTint="#FF6B00"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />





</RelativeLayout>
